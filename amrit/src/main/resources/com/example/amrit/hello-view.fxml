<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.amrit.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Button text="Fetch Data" onAction="#onFetchDataButtonClick"/>


    <TableView fx:id="tableView" prefHeight="400.0" prefWidth="331.0">
      <columns>
         <TableColumn prefWidth="29.60003662109375" text="id" />
         <TableColumn prefWidth="101.59998321533203" text="name" />
         <TableColumn minWidth="2.39996337890625" prefWidth="39.199951171875" text="age" />
         <TableColumn prefWidth="214.4000244140625" text="email" />
      </columns></TableView>
    <Label fx:id="messageLabel" />
    <Button onAction="#onInsertButtonClick" prefHeight="26.0" prefWidth="56.0" text="Insert" />
    <Button onAction="#onUpdateButtonClick" prefHeight="30.0" prefWidth="55.0" text="Update" />
    <Button onAction="#onDeleteButtonClick" prefHeight="26.0" prefWidth="55.0" text="Delete" />
    <Button onAction="#onViewDataButtonClick" text="View Data" />
</VBox>
